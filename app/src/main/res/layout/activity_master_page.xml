<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterPageActivity"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/menu">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu"
        android:paddingTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/menu">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/new_form"
                android:id="@+id/btn_nuevoFormulario"
                android:layout_weight="1"
                android:background="@color/menu"
                android:onClick="onClickButton" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/dowload"
                android:id="@+id/btn_descargarFormulario"
                android:layout_weight="1"
                android:background="@color/menu"
                android:onClick="onClickButton" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/upload"
                android:id="@+id/btn_subir_formualario"
                android:layout_weight="1"
                android:background="@color/menu"
                android:onClick="onClickButton" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="NUEVO FORMULARIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:autoText="false"
                android:gravity="center" />

            <TextView
                android:text="DESCARGAR FORMULARIOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="SUBIR FORMULARIOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/menu"
            android:paddingTop="20dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/buscar"
                android:id="@+id/btn_buscar_formulario"
                android:layout_weight="1"
                android:background="@color/menu"
                android:onClick="onClickButton" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/configuracion"
                android:id="@+id/btn_config_formulario"
                android:layout_weight="1"
                android:background="@color/menu"
                android:onClick="onClickButton" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/sinc"
                android:id="@+id/btn_actualizar_datos"
                android:layout_weight="1"
                android:background="@color/menu"
                android:onClick="onClickButton" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="BUSCAR FORMULARIOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f2textView7"
                android:layout_weight="1"
                android:autoText="false"
                android:gravity="center" />

            <TextView
                android:text="CONFIG SERVIDOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f2textView6"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:text="ACTUALIZAR DATOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/f2textView2"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>


    </TableLayout>
</LinearLayout>
